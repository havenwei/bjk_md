<template name="tab3">
	<view class="weui-cells__title">初步咨询意见</view>
	<view class="weui-cells weui-cells_after-title">
		<view class="weui-cell">
			<view class="weui-cell__bd">
				<textarea name="preliminary_diagnosis" class="weui-textarea" value="{{info.preliminary_diagnosis}}" auto-height="true" form="medicalRecordForm"/>
			</view>
		</view>
	</view>

	<view class="weui-cells__title">治疗意见</view>
	<view class="weui-cells weui-cells_after-title">
		<view class="weui-cell">
			<view class="weui-cell__bd">
				<textarea name="treatment_recommendation" class="weui-textarea" value="{{info.treatment_recommendation}}" auto-height="true" form="medicalRecordForm"/>
			</view>
		</view>
	</view>

	<view class="weui-cells__title">备注</view>
	<view class="weui-cells weui-cells_after-title">
		<view class="weui-cell">
			<view class="weui-cell__bd">
				<textarea name="remarks" class="weui-textarea" value="{{info.remarks}}" auto-height="true" form="medicalRecordForm"/>
			</view>
		</view>
	</view>

	<view class="weui-cells__title">上传图片</view>
	<view class="weui-cells">
		<view class="weui-cell">
			<ul class="weui-uploader__files">
				<li class="weui-uploader__file" wx:for="{{imgArr3}}" wx:key="{{index}}">
					<image
						class="uploader-image"
						src="{{item.data}}"
						mode="aspectFit"
						bindtap="previewImg3"
						data-imgUrl="{{item.data}}"
					></image>
				</li>
				<li class="weui-uploader__input-box" bindtap="doUpload3"></li>
			</ul>
		</view>
	</view>
</template>
