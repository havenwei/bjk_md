<!--pages/mr/index.wxml-->
<scroll-view class="weui-panel weui-panel_access">
	<view class="weui-panel__hd">病历列表</view>
	<view class="weui-panel__bd">
		<view class="weui-media-box weui-media-box_text" wx:for="{{medical_records}}" wx:key="unique">
			<navigator url="./show?id={{item.id}}" hover-class="navigator-hover">
				<view class="weui-media-box__title weui-media-box__title_in-text">{{item.name}}的病历</view>
				<view class="weui-media-box__desc">{{item.createdAt}}</view>
			</navigator>
		</view>
	</view>
</scroll-view>