			<view class="weui-cell__bd">
		{{info.preliminaryDiagnosis}}
			</view>
		</view>
	</view>

	<view class="weui-cells__title">治疗意见</view>
	<view class="weui-cells weui-cells_after-title">
		<view class="weui-cell">
			<view class="weui-cell__bd">
				{{info.treatmentRecommendation}}
			</view>
		</view>
	</view>

	<view class="weui-cells__title">备注</view>
	<view class="weui-cells weui-cells_after-title">
		<view class="weui-cell">
			<view class="weui-cell__bd">
				{{info.remarks}}
			</view>
		</view>
	</view>


	<view class="weui-cells__title">诊断图片</view>
	<view class="weui-cells">
		<view class="weui-cell">
			<ul class="weui-uploader__files">
				<li class="weui-uploader__file" wx:for="{{imgArr3}}" wx:key="*this">
					<image class="uploader-image" src="{{item.data}}" mode="aspectFit" bindtap="previewImg3" ></image>
				</li>
			</ul>
		</view>
	</view>

	<view class="weui-btn-area">
		<button formType="submit" class="weui-btn" type="primary" bindtap="goToEditPage">编辑</button>
	</view>

</template>

<!-- tab3模板 end-->
