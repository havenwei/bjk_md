/* pages/mr/new.wxss */

.page, .page__bd {
  height: 100%;
  padding-bottom: 0;
  font-size: 16px;
}

.weui-navbar__item {
  background-color: #FFFFFF;
}

.weui-tab__content {
  text-align: left;
}

.weui-flex {
  height: 60px;
  line-height: 60px;
  border-bottom: 1px solid #d9d9d9;
}

.weui-uploader__file {
  background-color: rgba(0, 0, 0, 0.5);
}

.weui-flex__item {
  padding-left: 34px;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.weui-flex__item__show {
  padding-top: 10px;
  padding-left: 34px;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.label {
  padding: 10px 20px;
  text-align: left;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
  width: 30%;
}

.weui-btn-area {
  margin: 1.17647059em 15px 1em;
}

.weui-cells__title {
  margin-top: 0em;
  margin-bottom: 0em;
  padding-left: 20px;
  padding-right: 15px;
  color: #212121;
  font-size: 14px;
  background: #f1f1f1;
  padding: 2px 15px 2px 20px;
}

radio {
  padding: 0 10px 0 0;
}

wx-label {
  width: 65px;
  display: inline-block;
}

.weui-uploader__input-box {
  float: left;
  position: relative;
  width: 77px;
  height: 77px;
  border: 1px solid #D9D9D9;
  margin-right: 5px;
  margin-bottom: 5px;
}

wx-view.weui-cells {
  margin-top: 0;
}

wx-li.weui-uploader__file {
  float: left;
  margin-right: 5px;
  margin-bottom: 5px;
  padding: 0;
  width: 77px;
  height: 77px;
  background: no-repeat center center;
  background-size: cover;
  border: 1px solid #D9D9D9;
}

wx-image.uploader-image {
  width: 77px;
  height: 77px;
}

.weui-flex picker {
  width: 100%;
  text-align: center;
}